{
    "manifest_version": 3,
    "name": "GreenChain Bank",
    "version": "1.0",
    "description": "Secure Ethereum wallet for personal use, giving users full control of their digital assets away from major exchanges.",
    "permissions": [
        "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/16gcb.png",
        "48": "images/48gcb.png",
        "128": "images/128gcb.png"
      }
    },
    "icons": {
      "16": "images/16gcb.png",
      "48": "images/48gcb.png",
      "128": "images/128gcb.png"
    }
  }
  